<view class="calendar"><view class="weeks_con flex-row align-items-center space-between"><block wx:for="{{monthList}}" wx:for-item="item" wx:for-index="index" wx:key="text"><view class="weeks_item">{{item.text}}</view></block></view><block wx:for="{{monthList}}" wx:for-item="monthitem" wx:for-index="index" wx:key="month"><view class="month_item"><view class="month_title">{{monthitem.year+"年"+monthitem.month+"月"}}</view><view class="week_con"><block wx:for="{{monthitem.monthArr}}" wx:for-item="weekitem" wx:for-index="index" wx:key="index"><view class="{{['weekitem','flex-row','align-items-center',range[1]?'rangeTip':'']}}"><block wx:for="{{weekitem}}" wx:for-item="dateitem" wx:for-index="index" wx:key="time"><view class="{{['dateCon',dateitem.time==range[0]?'startRangeTime':dateitem.time==range[1]?'endRangeTime':dateitem.time>range[0]&&dateitem.time<range[1]?'rangeTime':'']}}"><view class="{{[today==dateitem.time?'today':'',dateitem.time==range[0]?'startTime':dateitem.time==range[1]?'endTime':'']}}" data-item="{{dateitem.time}}" data-event-opts="{{[['tap',[['selectDate',['$event']]]]]}}" bindtap="__e">{{today==dateitem.time?'今':dateitem.text}}</view></view></block></view></block></view></view></block></view>